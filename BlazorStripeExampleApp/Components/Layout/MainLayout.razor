@inherits LayoutComponentBase

<div class="flex flex-col min-h-screen bg-gray-50 text-gray-900">
    <!-- Navbar -->
    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <a href="/" class="text-xl font-bold text-blue-600 hover:text-blue-700">Blazor Stripe Example</a>
            <nav class="space-x-4">
                <a href="/" class="text-gray-700 hover:text-blue-600">Home</a>
                <a href="/pricing" class="text-gray-700 hover:text-blue-600">Pricing</a>
                <a href="/about" class="text-gray-700 hover:text-blue-600">About</a>
            </nav>
        </div>
    </header>

    <!-- Main content -->
    <main class="flex-1 px-4 py-8 max-w-4xl mx-auto w-full">
        @Body
    </main>

    <!-- Footer -->
    <footer class="bg-white shadow-inner mt-8">
        <div class="max-w-7xl mx-auto px-4 py-4 text-center text-sm text-gray-500">
            © @DateTime.Now.Year Blazor Stripe Example. All rights reserved.
        </div>
    </footer>
</div>
