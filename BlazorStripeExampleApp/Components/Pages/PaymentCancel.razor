@page "/cancel"

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="bg-white p-8 rounded-2xl shadow-xl max-w-md w-full text-center">
        <div class="text-red-500 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 mb-2">Payment Canceled</h3>
        <p class="text-gray-600 mb-6">Your payment was not completed. You can try again or return to pricing.</p>
        <a href="/pricing" class="inline-block bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-full transition">
            Return to Pricing
        </a>
    </div>
</div>
